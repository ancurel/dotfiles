#
# bspwm hotkeys
#

# Exit wm
super + alt + Escape
	~/.config/polybar/kill.sh && bspc quit 1 


# Toggle panels
super + shift + x
	{ ~/.config/polybar/kill.sh; bspc config top_padding 0 ,\
	  ~/.config/polybar/launch.sh }


# Make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd


# Close node
super + q
	bspc node -c

# Maximize
super + t
	bspc desktop -l next

super + b
	bspc desktop -B
	
# Equalize
super + e
	bspc node -E

# Equalize
super + r
	bspc node -R 90

# Fullscreen / float
super + {s,f}
	bspc node -t {'~floating','~fullscreen'}

# Toggle last desktop
alt + {grave,Tab}
	bspc {node,desktop} -f last

# Toggle last node
super + apostrophe
	bspc node -s last

# Cycle through used nodes
super + {o,i}
	bspc control --record-history off; \
	bspc node {older,newer} -f; \
	bspc control --record-history on

super + y
    bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# Move node to biggest space
super + m
	bspc node -s biggest



# Move (to) nodes
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {_,shift + }c
	bspc node -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

# Next/prev desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}



# Expand selections
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + ctrl + {_,shift + }space
	bspc {node -p cancel,desktop -c}

# preselect the ratio
super + ctrl + {1-9}
 	bspc node -o 0.{1-9}


# Increase node size
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Decrease node size
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}



# Move node to desktop x
super + ctrl + {1-9}
	bspc node -r 0.{1-9}

# Goto/move to desktop x
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

~button1
	bspc pointer -g focus

# # Mouse: node resize
# super + button{1-3}
# 	bspc pointer -g {move,resize_side,resize_corner}

# super + !button{1-3}
# 	bspc pointer -t %i %i

# super + @button{1-3}
# 	bspc pointer -u


#
# wm independent hotkeys
#

super + Return
	alacritty

super + space
    dmenu_run -i -fn 'tewi' -l 4 -w 400 -x 30 -y 40 -o .9 -q -p '>' -sb \#25D4E2 -sf \#000 -h 20
    # dmenu_run -i -fn 'tewi' -dim .4 -l 4 -w 400 -x 30 -y 40 -o .9 -q -p '>' -sb \#25D4E2 -sf \#000 -h 20


super + F12
    picom --config ~/.compton.conf --experimental-backends --backend=glx --vsync


#
# Launch programs
#

super + ctrl + b
	firefox -p hangouts -no-remote

super + shift + b
	firefox

ctrl + shift + f
	thunar


#
# System volume
#

# XF86AudioMute
# 	amixer -q set PCM toggle
# XF86Audio{Lower,Raise}Volume
# 	amixer -q set Master {2-,2+} unmute
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86Audio{Lower,Raise}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {-2%,+2%}


#
# MPD Controls
#

super + F8
	mpc toggle

super + F9
	mpc next

super + F7
	mpc prev

super +  F11
	mpc volume -2

super + F12
	mpc volume +2


#
# Brightness settings
#
super + F1
	brightness --brightness 1

super + F2
	brightness --brightness .75

super + shift + F2
	brightness --brightness .6 --gamma .95:.95:.95
	# brightness --brightness .5 --gamma .8:.8:.8	
	# brightness --brightness .6 --gamma .88:.88:.88
