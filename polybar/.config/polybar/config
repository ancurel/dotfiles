secondary = #e60053
alert = #D83B8C
purple = #552D8A
purple-light = #9066FA
cyan = #25D4E2
cyan-dark = #17929b

[bar/main]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 20
;offset-x = 1%
; offset-y = 1px
radius = 0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
