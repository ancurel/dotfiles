[module/mailcount]
type = custom/script
exec = tail -F /tmp/mail_count
exec-if = [ -p /tmp/mail_count ]
tail = true
label = %output:0:3:...%
format-prefix = " "
format-prefix-foreground = #d83b8c
format-background = #2f2f2f
format-padding = 1

[module/vpn]
